"use client";
import { title } from "@/components/primitives";
import { Button } from "@heroui/button";
import link from "next/link";
import { useState } from "react";


export default function AboutPage() {
let facts: string[] = ["Summer in spanish is Verano", "It is considered unlucky to put a bagette upside down", "Bees dance to communicate", "The Mona Lisa has no eyebrows", "Broadway is the longest street in NYC", "Music can help plants grow", "Jazz started out as pop", "The word monsoon originates from the Arabic word mawsim meaning season", "The coffee beans we roast and grind are actually the seeds of a coffee cherry, a fruit that grows on a coffee plant", "Bharatanatyam is the oldest classical dance"];
const [fact,setFact] = useState("");
return (
<div>
<h1 className={title()}>About Me</h1>
<br />
<br />
<Button
className="bg-rose-300 text2xl"
onPress={() => {
setFact(facts[Math.floor(Math.random() * facts.length)]);
}}
> press for fact </Button>
<p>{fact}</p>
<br />